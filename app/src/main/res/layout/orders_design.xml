<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginBottom="16dp"
    cardview:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/black_border">

        <!-- ImageView for the image preview -->
        <!-- Set layout_margin to 0 -->
    <RelativeLayout
        android:id="@+id/Container"
        android:layout_width="181dp"
        android:layout_height="152dp"
        android:layout_marginStart="180dp"
        android:background="@drawable/orderdesign"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop">

        <!-- TextViews for shopName and shopAddress -->
        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="154dp"
            android:layout_height="142dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/black_border"
            android:scaleType="centerCrop"
            android:src="@drawable/place_holder" />
    </RelativeLayout>


        <!-- Price -->
        <TextView
            android:id="@+id/TextView"
            android:layout_width="159dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />



        <TextView
            android:id="@+id/deliveraddress"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/TextView"/>
        <TextView
            android:id="@+id/deliverprice"
            android:layout_width="159dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/deliveraddress"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
